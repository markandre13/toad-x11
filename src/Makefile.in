#---------------------------------------------------------------------------
# Xtras
#---------------------------------------------------------------------------
clean:
	@echo removing generated files in `pwd`
	@$(LIBTOOL) --tag=CXX --mode=clean rm -f libtoad.la $(LOBJS) $(OBJS)
	@rm -f $(CLEAN) *.bak *~ .depend core DEADJOE
	@rm -f connect.hh resource.cc ../bin/toadbin2c
	@rm -f include/toad
	@-rmdir include
	@echo Ok
