#!/bin/sh

prefix=@prefix@
exec_prefix=@prefix@
libdir=@libdir@
bindir=@bindir@
includedir=@includedir@
datadir=@datadir@

CXX=@CXX@
CXXFLAGS="-I${includedir} @X_CFLAGS@"
LIBS="@LDFLAGS@ -L${libdir} @LIBS@ -ltoad @X_LIBS@ @X_PRE_LIBS@ -lXmu -lX11"

usage() {
cat<<EOF
Usage: $0 [OPTIONS]
Options:
  [--prefix]
  [--exec-prefix]
  [--libs]
  [--cxxflags]
  [--cxx]
EOF
}

if test $# -eq 0 ; then
  usage
  exit 0;
fi

while true ; do

arg=$1
shift


if test -z $arg ; then
  exit 0;
fi

case $arg in
  --prefix)
    echo $prefix
    ;;
  --exec-prefix)
    echo $exec_prefix
    ;;
  --libs)
    echo $LIBS
    ;;
  --cxxflags)
    echo $CXXFLAGS
    ;;
  --cxx)
    echo $CXX
    ;;
  *)
    echo "unknown argument '$arg'"
    exit 1;
    ;;
esac

done

exit 0
